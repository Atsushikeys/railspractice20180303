<%= render 'partial/navbar' %>
<div class="container">
  <div class="row">
    <div class="col m12 l3 center-align row-space-4">
    <!-- 自分のプロフィールへのリンク -->

    <%= link_to "自分のプロフィールを確認", user_path(current_user), class: "waves-effect waves-light btn col s12" %>
    </div>

    <div class="col m12 l9 center-align">
      <div class="panel panel-default">
        <div class="panel-heading">プロフィールを編集</div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'partial/deviseErrorMsg' %>

            <div class="input-field col s12">
              <%= f.text_field :name, autofocus: true, :placeholder => "名前", :class => 'form-control' %>
            </div>

            <div class="input-field col s12">
              <%= f.email_field :email, :placeholder => "Email", :class => 'form-control' %>
            </div>

            <div class="input-field col s12">
              <%= f.text_field :phone_number, :placeholder => "電話番号", :class => 'form-control' %>
            </div>

            <div class="input-field col s12">
              <%= f.text_field :sex, :placeholder => "性別", :class => 'form-control' %>
            </div>

            <div class="input-field col s12">
              <%= f.text_field :age, :placeholder => "年齢", :class => 'form-control' %>
            </div>

            <div class="input-field col s12">
              <%= f.text_field :instrument, :placeholder => "演奏する楽器", :class => 'form-control' %>
            </div>

            <div class="input-field col s12">
              <%= f.text_area :description, rows: 5, cols: 25,  :placeholder => "自己紹介文", :class => 'form-control' %>
            </div>

            <div class="input-field col s12">
              <%= f.label :新しいパスワード %> <i>(変更しない場合は空欄で構いません)</i><br />
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
            </div>

            <div class="input-field col s12">
              <%= f.label :新しいパスワードの確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
            </div>

            <div class="actions">
              <%= f.submit "プロフィールを更新", :class => "waves-effet waves-light btn blue darken-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>    
  </div>  
</div>

