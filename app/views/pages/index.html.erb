<div class="jumbotron">
 <%= render 'partial/navbar'%>

	<div class="container">
		<div class="row">
			<div class="col s12">
				  <h1 class="display-3 center-align">SonoLigo</h1>
					<div class="row">
					  <% @user.each do |person|%>
					  	
				        <div class="col s12 m6">
				          <div class="card blue-grey darken-1">
				            <div class="card-content white-text">
				              <span class="card-title"><%= person.name %></span>
				              <%= person.description %>
				            </div>
				            <div class="card-action">
				              <a href="#">プロフィールを見る</a>
				              <a href="#">音源を聞く</a>
				            </div>
				          </div>
				        </div>
				    <% end %>	
			   	</div>
				  	
				  			
			</div>
		</div>
	</div>	




</div>


<script type="text/javascript">
	$(function(){
		$(".navbar").removeClass("navbar-devise");
		$(".navbar").addClass("navbar-default");
	});
</script>

